<!--Carousel Wrapper-->
<div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">

    <!--Controls-->
    <div class="controls-top">
        <a class="btn-floating" href="#multi-item-example" data-slide="prev"><i class="fas fa-chevron-left"></i></a>
        <a class="btn-floating" href="#multi-item-example" data-slide="next">
            <i class="fas fa-chevron-right"></i>
        </a>
    </div>
    <!--/.Controls-->
    <!--Indicators-->
    <ol class="carousel-indicators">
        <li data-target="#multi-item-example" data-slide-to="0" class="active"></li>
        <li data-target="#multi-item-example" data-slide-to="1"></li>

    </ol>
    <!--/.Indicators-->
    <!--Slides-->
    <div class="carousel-inner" role="listbox">

        <!--First slide-->
        <div class="carousel-item active">

            @foreach (var item in Model.Take(4))
            {
                <div class="col-md-3" style="float:left">
                    <div class="card mb-2">
                        <a asp-controller="Book" asp-action="GetById" asp-route-id="@item.Id">
                        <img class="card-img-top"
                         src="@item.ImageImageUrl" alt="Card image cap">
                         </a>
                        <div class="card-body">
                            <a style="color:black" asp-controller="Book" asp-action="GetById" asp-route-id="@item.Id">
                                <h4 class="card-title">@item.Title</h4>
                            </a>
                            <p class="card-text">
                                @item.Description.Substring(0, 40) ...
                            </p>
                            <span class="price" style="font-weight: bold; color:#80391e;">€@item.Price</span>
                            <a asp-controller="Book" asp-action="Buy" asp-route-id="@item.Id" class="btn btn-dark" role="button">Add to Card</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!--/.First slide-->

        <!--Second slide-->
        <div class="carousel-item">

           @foreach (var item in Model.Skip(4))
            {
                <div class="col-md-3" style="float:left">
                    <div class="card mb-2">
                        <a asp-controller="Book" asp-action="GetById" asp-route-id="@item.Id">
                        <img class="card-img-top"
                         src="@item.ImageImageUrl" alt="Card image cap">
                         </a>
                        <div class="card-body">
                            <a style="color:black" asp-controller="Book" asp-action="GetById" asp-route-id="@item.Id">
                                <h4 class="card-title">@item.Title</h4>
                            </a>
                            <p class="card-text">
                                @item.Description.Substring(0, 40) ...
                            </p>
                            <span class="price" style="font-weight: bold; color:#80391e;">€@item.Price</span>
                            <a asp-controller="Book" asp-action="Buy" asp-route-id="@item.Id" class="btn btn-dark" role="button">Add to Card</a>
                        </div>
                    </div>
                </div>
            }

        </div>
        <!--/.Second slide-->



    </div>
    <!--/.Slides-->

</div>
<!--/.Carousel Wrapper-->


